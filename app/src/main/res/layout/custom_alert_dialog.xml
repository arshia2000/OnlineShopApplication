<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/img_custom_alert_wifi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/wifi">

    </ImageView>


    <TextView
        android:id="@+id/tv_custom_alert_wifi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_custom_alert_wifi"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="اینترنت متصل نیست."
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000"></TextView>


    <Button
        android:id="@+id/btn_custom_alert_wifi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_custom_alert_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="تلاش مجدد"
        android:background="@color/red_color"
        android:textColor="@color/white_color"
        android:textSize="25sp"></Button>




</RelativeLayout>